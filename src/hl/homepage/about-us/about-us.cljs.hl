(defc current-bio nil)

(defn bio [profile]
  (div :id "bio" :class "ui modal"
       (i :class "close icon")
       (div :class "header"
            (h1 (cell= (:name profile)))
            (h2 (cell= (:position profile)))
            (div (cell= [
                         (when (:birthday-image profile)
                           (img :class "ui medium right floated image"
                                :src (cell= (:birthday-image profile))))
                         (:bio profile)]))
            )))

(defn show-bio [profile]
  (reset! current-bio profile)
  (.modal (js/jQuery "#bio.modal") "show"))

(def klout-iframe
  (iframe
    :src "http://widgets.klout.com/badge/CatRust"
    :style "border:0"
    :scrolling "no"
    :allowTransparency "true"
    :frameBorder "0"
    :width "100px"
    :height "49px"))

(defn klout-widget [profile]
  (div
    (img :class "klout icon"
         :src "/images/about-us/kloud-50x39.png"
         ;:src (cell= (str "http://www.kloutwidget.com/32/"(:twitter profile)".png"))
         )
    (label :class "klout-score" (text (:klout profile)))
    ))

(defn social-icons [profile media]
  (div :class media
       (a :click #(show-bio profile) :target "_blank"
          (i :class "user tiny icon"))
       (if (:linkedin profile)
         (a :href (:linkedin profile) :target "_blank"
            (i :class "linkedin tiny icon")))
       (if (:twitter profile)
         (a :href (str "http://twitter.com/" (:twitter profile)) :target "_blank"
            (i :class "twitter tiny icon"))))
  )

(defn team-member [profile]
  (let [bio-visible (cell false)
        show-hide-bio #(swap! bio-visible not)]
    (cell-let
      [{:keys [image name position linkedin twitter bio]} profile]
      (div :class "center aligned column description sizer"
           (img :class "ui small left floated bio link image" :src image
                :click show-hide-bio)
           (h3 :class "ui small left aligned link header"
               :click show-hide-bio
               (span name)
               (div :class "sub header" :text position))
           (div :class "ui left aligned basic bio segment"
                (a :href linkedin
                   :target "_blank"
                   :toggle linkedin
                   (i :class "linkedin square large teal icon"))
                (a :href (str "https://twitter.com/" twitter)
                   :toggle twitter
                   :target "_blank"
                   (i :class "twitter square large teal icon")))
           (div :class "ui left aligned basic bio segment"
                :toggle bio-visible
                :style "display:none"
                (cell= (bio)))))))

