(defelem banner-header[{:keys [header]}]
  (let [banner-h (header banner-header-dividers)
        background (:background banner-h)
        inverted (:inverted banner-h)
        size (or (:size banner-h) "small")
        centered (:centered banner-h)]
    (div :class "ui basic segment"
         :do-class {:tertiary background :inverted inverted}
         (div :class "ui hidden divider")
         (div :class "ui page grid title sizer"
              (h2 :class (str "ui header " size )
                  :do-class {:center centered
                             :aligned centered
                             :inverted inverted}
                  :text (:header banner-h)))
