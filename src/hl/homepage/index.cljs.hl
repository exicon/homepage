(defn quote-column [x]
	(div :class "column"
		(h2 (text (get x :title)))
		(p (text (get x :msg)))
	)
)
(defn customer-quote [x]
	(div :class "column quote"
			(h2 (text (get x :title)))
			(p :class "quote" (i :class "quote small left blue icon") (text (get x :msg)) (i :class "quote small blue right icon"))))

(defn quotes []
